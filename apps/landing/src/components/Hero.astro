---
import AppMock from './AppMock.astro';
---

<section class="relative min-h-screen pt-[47px] overflow-hidden">
    <!-- Grid background -->
    <div class="absolute inset-0 pointer-events-none" style="
        background-image:
            linear-gradient(to right, oklch(1 0 0 / 4%) 1px, transparent 1px),
            linear-gradient(to bottom, oklch(1 0 0 / 4%) 1px, transparent 1px);
        background-size: 60px 60px;
        mask-image: radial-gradient(ellipse 70% 50% at 50% 30%, black, transparent);
    "></div>

    <div class="relative mx-auto max-w-6xl px-6 pt-24 md:pt-32">
        <!-- Badge -->
        <div class="mb-6">
            <span class="inline-flex items-center gap-2 border border-border bg-accent/5 px-3 py-1 text-[11px] text-fg-muted">
                <span class="inline-block size-1.5 rounded-full bg-green-400 animate-pulse-dot"></span>
                OpenTelemetry native
            </span>
        </div>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-fg leading-tight max-w-4xl">
            Open-source observability.<br />
            Built for you. <span class="text-gradient-accent">Native to AI.</span>
        </h1>

        <!-- Subtitle -->
        <p class="mt-5 text-sm md:text-base text-fg-muted max-w-xl leading-relaxed">
            Traces, logs, and metrics on OpenTelemetry. Query billions of rows in milliseconds â€” or let your AI agent do it.
        </p>

        <!-- Dual CTAs -->
        <div class="mt-8 flex flex-wrap items-center gap-4">
            <a href="https://app.maple.dev" class="bg-accent text-accent-foreground px-6 py-2.5 text-sm font-medium hover:opacity-90 transition-opacity">
                Get started free
            </a>
            <a href="https://github.com/Makisuo/maple" target="_blank" rel="noopener noreferrer" class="border border-border px-6 py-2.5 text-sm font-medium text-fg hover:opacity-90 transition-opacity">
                View on GitHub
            </a>
        </div>

        <!-- App mock with glow -->
        <div class="mt-16 md:mt-20 relative">
            <div class="absolute inset-0 pointer-events-none" style="
                box-shadow: 0 0 120px 40px oklch(0.68 0.15 237 / 0.08);
            "></div>
            <AppMock />
        </div>
    </div>
</section>
